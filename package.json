{
  "name": "gym-tracker-server",
  "version": "1.0.0",
  "description": "Server for Gym Tracker",
  "main": "server.js",
  "scripts": {
    "test": "mocha --recursive --require babel-polyfill --require babel-register --exit",
    "start": "node server.js",
    "devstart": "nodemon server.js",
    "devtest": "nodemon --exec \"mocha --recursive --require babel-polyfill --require babel-register\"",
    "devconcurrent": "concurrently \"nodemon server.js\" \"webpack --watch\"",
    "deploy": "now -e NODE_ENV=production -e DATABASE_URL=@db-url --public --token $NOW_TOKEN && now --token $NOW_TOKEN alias && now --token $NOW_TOKEN remove gym-tracker-server --safe -y"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abandisch/gym-tracker-app.git"
  },
  "author": "Alex Bandisch <alexander.bandisch@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abandisch/gym-tracker-app/issues"
  },
  "homepage": "https://github.com/abandisch/gym-tracker-app#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.3",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "concurrently": "^3.5.1",
    "faker": "^4.1.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1"
  },
  "env": {
    "DATABASE_URL": "@db-url"
  }
}
